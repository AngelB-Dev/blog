---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---
<div class="hero-image">
  <Image 
    src={src} 
    alt={alt}
    width={1020} 
    height={510}
    format="webp"
    quality={80}
    loading="eager"
  />
</div>

<style>
  .hero-image {
    width: 100%;
  }
  .hero-image img {
    display: block;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    box-shadow: var(--box-shadow);
  }
</style>